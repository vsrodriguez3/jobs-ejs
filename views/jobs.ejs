<%- include('partials/header') %>

<h2>Jobs List</h2>
<a href="/jobs/new">Add New Job</a>

<table id="jobs-table">
  <tr id="jobs-table-header">
    <th>Company</th>
    <th>Position</th>
    <th>Status</th>
    <th colspan="2"></th>
  </tr>

  <% if (jobs && jobs.length) { %>
    <% jobs.forEach((job) => { %>
      <tr>
        <td><%= job.company %></td>
        <td><%= job.position %></td>
        <td><%= job.status %></td>

        <!-- Edit Button (GET request) -->
        <td>
          <a href="/jobs/edit/<%= job._id %>">
            <button type="button">Edit</button>
          </a>
        </td>

        <!-- Delete Button (POST request with CSRF token) -->
        <td>
          <form method="POST" action="/jobs/delete/<%= job._id %>" style="display: inline;">
            <input type="hidden" name="_csrf" value="<%= _csrf %>">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  <% } else { %>
    <tr>
      <td colspan="5">No jobs found</td>
    </tr>
  <% } %>
</table>

<%- include('partials/footer') %>